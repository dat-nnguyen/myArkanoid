<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="930.0" prefWidth="1280.0" stylesheets="@pause.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.Pause.PauseScene">
   <children>
      <ImageView fitHeight="930.0" fitWidth="1280.0" layoutX="0.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/images/pauseImages/backgroundpause.png" />
         </image>
         <effect>
            <Blend mode="OVERLAY" opacity="0.46" />
         </effect>
      </ImageView>
      <ImageView fitHeight="140.0" fitWidth="483.0" layoutX="405.0" layoutY="238.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/images/pauseImages/pause_title.png" />
         </image>
         <effect>
            <DropShadow />
         </effect>
      </ImageView>
      <Button fx:id="continueButton" contentDisplay="GRAPHIC_ONLY" layoutX="528.0" layoutY="447.0" mnemonicParsing="false" onMouseClicked="#onContinueClicked">
         <graphic>
            <ImageView fitHeight="34.0" fitWidth="225.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="/images/pauseImages/continue.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="quitButton" contentDisplay="GRAPHIC_ONLY" layoutX="574.0" layoutY="507.0" mnemonicParsing="false" onMouseClicked="#onQuitClicked">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="104.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="/images/pauseImages/quit.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
